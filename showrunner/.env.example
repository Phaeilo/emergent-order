# LED Cube Showrunner Configuration
# Shell script format - usable with direnv or source directly
# Copy this file to .envrc (for direnv) or .env (for manual sourcing)

# Required - Path to LED coordinate file
export LED_COORDS_FILE=/home/philip/Documents/led_cube/tri8/solution1.txt

# Optional - Animation configuration
export ANIMATION_DIR=/home/philip/Documents/led_cube/3d_cube_demo
export ANIMATION_CONTROL_FILE=/tmp/led_animation
export INITIAL_ANIMATION=simple_sphere_script.js

# Optional - Serial port configuration
export SERIAL_PORT_BASE=/dev/ttyACM
export SERIAL_BAUDRATE=115200

# Optional - Performance configuration
export FPS=30
export LEDS_PER_CHANNEL=200
export NUM_CHANNELS=6

# Optional - Status output (single JSON file, overwritten each update)
export STATUS_FILE=/tmp/led_status.json

# Optional - Logging
export LOG_LEVEL=info
export LOG_FRAME_STATS=false
export FRAME_STATS_INTERVAL=60

# Optional - WebSocket server configuration
export WS_LISTEN=127.0.0.1:8080
export WS_EVICTION_AGE=300
export WS_IDLE_TIMEOUT=30
